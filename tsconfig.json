{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020", "ESNext.Array", "DOM"],

    "outDir": "./lib",
    "rootDir": "./src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "allowJs": false,
    "checkJs": false,

    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "src/**/*.test.ts", "src/**/*.test-e2e.ts", "src/Tests/**/*"]
}
